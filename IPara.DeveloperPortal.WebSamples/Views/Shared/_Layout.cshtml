<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - iPara Developer Portal </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">

                <a href="/Home/Index">
                    <img src="~/images/ipara-logo.svg" width="9%" height="9%" style="margin-top: 10px; margin-left: 13px;" />
                </a>
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("3D Ödeme ", "Index", "Home")</li>
                    <li>@Html.ActionLink("(Non-3D) Ödeme ", "Non3dPayment", "Home")</li>
                    <li>@Html.ActionLink("Ödeme Sorgulama", "PaymentInquiry", "Home")</li>
                    <li>@Html.ActionLink("Ödemeleri Listele", "PaymentInquiryWithTime", "Home")</li>
                    <li>@Html.ActionLink("Bin Sorgulama", "BinInquiry", "Home")</li>
                    <li>@Html.ActionLink("Bin Sorgulama V4", "BinInquiryV4", "Home")</li>
                    <li>@Html.ActionLink("Cüzdana Kart Ekle", "AddCardToWallet", "Home")</li>
                    <li>@Html.ActionLink("Cüzdandaki Kartları Listele", "GetCardFromWallet", "Home")</li>
                    <li>@Html.ActionLink("Cüzdandan Kart Sil", "DeleteCardFromWallet", "Home")</li>
                    <li>@Html.ActionLink("Cüzdandaki Kart İle Ödeme", "Non3dPaymentWithWallet", "Home")</li>
                    <li>@Html.ActionLink("Ödeme Linki Oluştur", "LinkPaymentCreate", "Home")</li>
                    <li>@Html.ActionLink("Ödeme Linki Sorgula", "LinkPaymentList", "Home")</li>
                    <li>@Html.ActionLink("Ödeme Linki Sil", "LinkPaymentDelete", "Home")</li>
                    <li>@Html.ActionLink("İade Sorgula", "PaymentRefundInquiry", "Home")</li>
                    <li>@Html.ActionLink("İade Et", "PaymentRefund", "Home")</li>
                    <li>@Html.ActionLink("Checkout Formu Oluşturma", "CheckoutFormCreate", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">

        <br />
        <br />
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - iPara</p>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
